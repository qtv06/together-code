<div class="contact-form">
  <h2 class="text-center">Register Account</h2>
  <form action="" method="POST" class="form-horizontal" role="form">
    {{# each errorsMes }}
      <p class="alert alert-danger">{{ this.msg }}</p>
    {{/each}}
    <div class="form-group">
      <label>Name: </label>
      <input type="text" name="name" class="form-control" placeholder="Your Name" value="{{name}}">
    </div>
    <div class="form-group">
      <label>Email address: </label>
      <input type="email" name="email" class="form-control" placeholder="Your Email" value={{email}}>
    </div>
    <div class="form-group">
      <label>Password: </label>
      <input type="password" name="password" class="form-control" placeholder="Password" value={{email}}>
    </div>
    <div class="form-group">
      <label>Password Confirm: </label>
      <input type="password" name="confirmPassword" class="form-control" placeholder="Password" value={{email}}>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-info">Register</button>
    </div>
  </form>
</div>