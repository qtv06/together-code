<div class="contact-form">
  <h2 class="text-center">Contac Us</h2>
  {{# each errors_mes }}
    <p class="alert alert-danger">{{ this.msg }}</p>      
  {{/each}}
  <form action="" method="POST" class="form-horizontal" role="form">
    <div class="form-group">
      <label>Name: </label>
      <input type="text" name="name" class="form-control" placeholder="Your Name" value="{{name}}">
    </div>
    <div class="form-group">
      <label>Email address: </label>
      <input type="email" name="email" class="form-control" placeholder="Your Email" value={{email}}>
    </div>
    <div class="form-group">
      <label for="exampleInputFile">Messages: </label>
      <textarea class="form-control" name="message" rows="3" placeholder="Say something here...">{{message}}</textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-info">Give it for us</button>
    </div>
  </form>
</div>